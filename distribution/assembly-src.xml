<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>src</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>../README</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>../LICENSE</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>../cmd/README</source>
      <outputDirectory>cmd/</outputDirectory>
    </file>
    <file>
      <source>../core/API</source>
      <outputDirectory>core/</outputDirectory>
    </file>
    <file>
      <source>../core/CHANGELOG</source>
      <outputDirectory>core/</outputDirectory>
    </file>
    <file>
      <source>../core/pom.xml</source>
      <outputDirectory>core/</outputDirectory>
    </file>
    <file>
      <source>../cmd/pom.xml</source>
      <outputDirectory>cmd/</outputDirectory>
    </file>
    <file>
      <source>../cmd/benchmark</source>
      <outputDirectory>cmd/</outputDirectory>
    </file>
    <file>
      <source>../cmd/benchmark.bat</source>
      <outputDirectory>cmd/</outputDirectory>
    </file>
  </files>
  <moduleSets>
    <moduleSet>

      <!-- Enable access to all projects in the current multimodule build! -->
      <useAllReactorProjects>true</useAllReactorProjects>

      <!-- Now, select which projects to include in this module-set. -->
      <includes>
        <include>net.sf.sparql.query.benchmarking:core</include>
        <include>net.sf.sparql.query.benchmarking:cmd</include>
      </includes>
      <sources />
    </moduleSet>
  </moduleSets>
</assembly>