<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>../README</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>../LICENSE</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>../cmd/README</source>
			<outputDirectory>cmd/</outputDirectory>
		</file>
		<file>
			<source>../core/API</source>
			<outputDirectory>core/</outputDirectory>
		</file>
		<file>
			<source>../core/CHANGELOG</source>
			<outputDirectory>core/</outputDirectory>
		</file>
		<file>
			<source>../cmd/benchmark</source>
			<outputDirectory>cmd/</outputDirectory>
		</file>
		<file>
			<source>../cmd/benchmark.bat</source>
			<outputDirectory>cmd/</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>../core/queries/</directory>
			<outputDirectory>core/queries</outputDirectory>
			<includes>
				<include>**/*.txt</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>net.sf.sparql.query.benchmarking:cmd</include>
			</includes>
			<binaries>
				<outputDirectory>cmd/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>net.sf.sparql.query.benchmarking:core</include>
			</includes>
			<binaries>
				<outputDirectory>core/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>