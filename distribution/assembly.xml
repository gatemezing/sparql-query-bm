<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>sparql-query-bm-${project.version}</baseDirectory>

	<fileSets>
		<fileSet>
			<directory>../</directory>
			<includes>
				<include>CHANGELOG.md</include>
				<include>README.md</include>
				<include>LICENSE</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>../cmd/</directory>
			<outputDirectory>cmd/</outputDirectory>
			<includes>
				<include>README.md</include>
				<include>example-assembler.ttl</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>../cmd/</directory>
			<outputDirectory>cmd/</outputDirectory>
			<includes>
				<include>*.bat</include>
				<include>benchmark</include>
				<include>operations</include>
				<include>run</include>
				<include>smoke</include>
				<include>soak</include>
				<include>stress</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>../core/queries/</directory>
			<outputDirectory>cmd/suites/</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>../core/target/</directory>
			<outputDirectory>api/</outputDirectory>
			<includes>
				<include>apidocs/</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>../core/target/</directory>
			<outputDirectory>api/</outputDirectory>
			<includes>
				<include>core-${project.version}.jar</include>
				<include>core-${project.version}-javadoc.jar</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>../cmd/target/sparql-query-bm-cli.jar</source>
			<destName>cmd/sparql-query-bm-cli.jar</destName>
			<fileMode>0755</fileMode>
		</file>
	</files>
</assembly>